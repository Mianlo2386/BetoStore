<!-- agregarProducto.ejs -->

<!DOCTYPE html>
<html lang="es">
<head>
  <!-- ... tus metadatos y enlaces a hojas de estilo ... -->
  <link rel="stylesheet" href="/css/agregarProducto.css">
  <title>Agregar Producto - BetoStore</title>
</head>
<body>
  <% include('header') %>
  
  <div class="formulario-agregar">
    <h2>Agregar nuevo producto</h2>

    <form action="/admin/agregar-producto" method="POST" enctype="multipart/form-data">
      <label for="id">ID:</label>
      <input type="text" id="id" name="id" required>

      <!-- <label for="nombre">Nombre:</label>
      <input type="text" id="nombre" name="nombre" required> -->

      <label for="descripcion">Descripción:</label>
      <textarea id="descripcion" name="descripcion" required></textarea>

      <label for="precio">Precio:</label>
      <input type="text" id="precio" name="precio" required>

      <label for="imagen">Imagen:</label>
      <input type="file" id="imagen" name="imagen" accept="image/*">

      <!-- Otros campos según sea necesario -->

      <button type="submit">Agregar Producto</button>
    </form>
  </div>
  
  <% include('footer') %>
</body>
</html>
